
import java.util.Scanner;

public class Zad12 {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		String password;
		do{
			System.out.println("Podaj hasło");
			password = sc.next();
		}while(!password.equals("Akademia")); //metoda equals - do porównania haseł
		System.out.println("Gratulacje podałeś prawidłowe hasło");
	}

}
